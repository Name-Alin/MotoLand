@page
@model MotoLand.Pages.Dealers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Dealers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DealerMoto[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DealerMoto[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DealerMoto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Dealer Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Remove dealer</a>
            </td>
        </tr>
}
    </tbody>
</table>
